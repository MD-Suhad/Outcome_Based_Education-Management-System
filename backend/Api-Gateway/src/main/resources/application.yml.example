spring:
  application:
    name: api-gateway

  profiles:
    active: dev

  servlet:
    multipart:
      max-file-size: 10MB
      max-request-size: 10MB

  cloud:
    gateway:
      routes:
        - id: auth-service
          uri: lb://OBE-AUTH-SERVICE
          predicates:
            - Path=/api/v1/auth/**

server:
  port: 8080

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka/
    register-with-eureka: true
    fetch-registry: true
